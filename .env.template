# Dealer Scraper Environment Configuration
# Copy this file to .env and configure as needed

# LLM Settings (Ollama)
LLM_ENDPOINT=http://localhost:11434/api/generate
LLM_MODEL=gemma2:2b
LLM_TIMEOUT=120
LLM_MAX_TOKENS=1500
LLM_ANALYSIS_ENABLED=true

# Jina Reader API
JINA_READER_ENABLED=true

# Scraper Settings
SCRAPER_DEBUG=false

# Post-Search Validation (always enabled for accuracy)
POST_VALIDATION_ENABLED=true

# Discovery Settings
DISCOVERY_USE_CRAWL4AI=true
DISCOVERY_CACHE_TTL_DAYS=30
